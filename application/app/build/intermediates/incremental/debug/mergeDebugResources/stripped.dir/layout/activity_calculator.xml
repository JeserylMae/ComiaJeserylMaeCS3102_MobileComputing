<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".activty.MainActivity">

    <TextView
        android:id="@+id/textView_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="@string/calculator_sign"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginVertical="20dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_field_container"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_field_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/ic_background_outlined_pink_solid_beige"
        app:layout_constraintTop_toBottomOf="@+id/textView_page_title"
        app:layout_constraintBottom_toTopOf="@+id/grid_button_container">

        <EditText
            android:id="@+id/editText_input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="36sp"
            android:singleLine="true"
            android:autofillHints="none"
            android:fontFamily="@font/jua"
            android:textAlignment="textEnd"
            android:textColor="@color/maroon"
            android:inputType="numberDecimal"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/transparent_white"
            app:layout_constraintBottom_toTopOf="@+id/textView_answer"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="end"
            app:layout_constraintBottom_toTopOf="@+id/button_clear_all"
            />

        <ImageButton
            android:id="@+id/button_history"
            android:contentDescription="@string/cd_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_history"
            android:padding="10dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="@+id/button_backspace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/button_backspace"
            android:background="@drawable/ic_ripple_transparent"
            />

        <Button
            android:id="@+id/button_clear_all"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textSize="20sp"
            android:text="@string/clear_all"
            android:fontFamily="@font/jua"
            android:textColor="@color/pink"
            android:layout_marginEnd="50dp"
            android:background="@drawable/ic_ripple_transparent"
            app:layout_constraintTop_toTopOf="@id/button_backspace"
            app:layout_constraintBottom_toBottomOf="@id/button_backspace"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageButton
            android:id="@+id/button_backspace"
            android:contentDescription="@string/cd_backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_backspace"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_ripple_transparent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shape_line_pink"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="@id/grid_button_container"
        app:layout_constraintBottom_toTopOf="@id/grid_button_container"
        app:layout_constraintStart_toStartOf="@id/grid_button_container"
        />

    <GridLayout
        android:id="@+id/grid_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/transparent_white">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_parenthesis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/parenthesis"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_solid_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_signPN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/sign_PN"
            android:autofillHints="none"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_solid_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/percent"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_solid_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/divide"
            android:background="@drawable/ic_ripple_solid_maroon"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/seven"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/eight"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/nine"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_multiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/multiply"
            android:background="@drawable/ic_ripple_solid_maroon"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/four"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/five"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/six"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_subtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/subtract"
            android:background="@drawable/ic_ripple_solid_maroon"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/one"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/two"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/three"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/add"
            android:background="@drawable/ic_ripple_solid_maroon"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/zero"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:text="@string/pint"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_ripple_outlined_pink"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/jua"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/beige"
            android:text="@string/equal"
            android:background="@drawable/ic_ripple_solid_maroon"
            />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/beige">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_dialog_alert_label"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/jua"
        android:background="@color/pink"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textView_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/beige"
        android:fontFamily="@font/noto_sans_kr"
        android:textSize="15sp"
        android:textColor="@color/black"
        tools:ignore="RtlSymmetry"
        app:layout_constraintTop_toBottomOf="@+id/textView_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_cancel_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_cancel_label"
        android:fontFamily="@font/noto_sans_kr"
        android:padding="0dp"
        android:textColor="@color/beige"
        android:backgroundTint="@color/maroon"
        android:layout_marginEnd="15dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_summary"
        app:layout_constraintEnd_toStartOf="@+id/button_confirm_submit"/>

    <Button
        android:id="@+id/button_confirm_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_submit"
        android:fontFamily="@font/noto_sans_kr"
        android:textColor="@color/beige"
        android:backgroundTint="@color/pink"
        android:padding="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_summary"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
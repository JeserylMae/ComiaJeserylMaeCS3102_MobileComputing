<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".activty.RtMcServicesActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_shadowed_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/beige"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="10dp">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector_back"
                android:contentDescription="@string/cd_back_button"
                android:background="@drawable/ic_ripple_transparent"
                android:layout_margin="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_courses"
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/button_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingVertical="20dp"
                android:paddingHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/button_back"
                android:background="@drawable/ic_background_solid_maroon">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_image_realtime_mc_services"
                    android:contentDescription="@string/text_realtime_mc_services"
                    />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/beige"
                    android:textSize="24sp"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/jua"
                    android:paddingStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/text_realtime_mc_services"
                    tools:ignore="RtlSymmetry"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_header_container">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textview_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_realtime_mc_intro"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textSize="14sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/textview_intro_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_realtime_mc_intro"
                        android:textSize="14sp"
                        android:fontFamily="@font/noto_sans_kr"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/textview_intro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:justificationMode="inter_word"
                        />

                    <TextView
                        android:id="@+id/textview_title_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:text="@string/title_realtime_mc_body"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textview_intro_content"
                        />

                    <TextView
                        android:id="@+id/textview_text_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/noto_sans_kr"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:justificationMode="inter_word"
                        android:text="@string/text_realtime_mc_body"
                        app:layout_constraintTop_toBottomOf="@id/textview_title_body"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/button_lesson_zero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingEnd="10dp"
                        android:background="@drawable/ic_ripple_solid_white"
                        app:layout_constraintTop_toBottomOf="@id/textview_text_body"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="RtlSymmetry">

                        <ImageView
                            android:id="@+id/imageview_lesson_zero"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/ic_image_zero"
                            android:contentDescription="@string/zero"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/ic_background_outlined_maroon"
                            />

                        <TextView
                            android:id="@+id/textview_lesson_zero"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:text="@string/title_realtime_mc_body_0"
                            android:layout_marginStart="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imageview_lesson_zero"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/noto_sans_kr"
                            android:text="@string/text_difficulty_easy"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-20dp"
                            app:layout_constraintTop_toBottomOf="@id/textview_lesson_zero"
                            app:layout_constraintStart_toEndOf="@id/imageview_lesson_zero"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/button_lesson_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:paddingEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_ripple_solid_white"
                        app:layout_constraintTop_toBottomOf="@id/button_lesson_zero"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="RtlSymmetry">

                        <ImageView
                            android:id="@+id/imageview_lesson_one"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/ic_image_one"
                            android:contentDescription="@string/zero"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/ic_background_outlined_maroon"
                            />

                        <TextView
                            android:id="@+id/textview_lesson_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:text="@string/title_realtime_mc_body_1"
                            android:layout_marginStart="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imageview_lesson_one"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/noto_sans_kr"
                            android:text="@string/text_difficulty_easy"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-20dp"
                            app:layout_constraintTop_toBottomOf="@id/textview_lesson_one"
                            app:layout_constraintStart_toEndOf="@id/imageview_lesson_one"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/button_lesson_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:paddingEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_ripple_solid_white"
                        app:layout_constraintTop_toBottomOf="@id/button_lesson_one"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="RtlSymmetry">

                        <ImageView
                            android:id="@+id/imageview_lesson_two"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/ic_image_two"
                            android:contentDescription="@string/zero"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/ic_background_outlined_maroon"
                            />

                        <TextView
                            android:id="@+id/textview_lesson_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:text="@string/title_realtime_mc_body_2"
                            android:layout_marginStart="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imageview_lesson_two"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/noto_sans_kr"
                            android:text="@string/text_difficulty_easy"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-20dp"
                            app:layout_constraintTop_toBottomOf="@id/textview_lesson_two"
                            app:layout_constraintStart_toEndOf="@id/imageview_lesson_two"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/textview_title_conclusion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:text="@string/title_realtime_mc_Conclusion"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/button_lesson_two"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:justificationMode="inter_word"
                        android:text="@string/text_realtime_mc_conclusion"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textview_title_conclusion"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

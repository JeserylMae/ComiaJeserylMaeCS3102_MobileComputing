<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".activty.WhatsTheFlagActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_shadowed_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/beige"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="10dp">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector_back"
                android:contentDescription="@string/cd_back_button"
                android:background="@drawable/ic_ripple_transparent"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_country_flag"
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                android:textColor="@color/beige"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                app:layout_constraintTop_toTopOf="@id/button_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/button_back"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/ic_background_solid_maroon"
                />

            <ImageView
                android:id="@+id/image_flag_holder"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:padding="30dp"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_image_country_flag_2"
                android:contentDescription="@string/text_country_flag"
                android:background="@drawable/ic_background_outlined_maroon"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dropdown_country_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/text_select_country"
                android:textColorHint="@color/maroon"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/image_flag_holder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_select_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_background_outlined_maroon_parallel_corner"
                    android:inputType="none"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:padding="8dp"
                    android:fontFamily="@font/noto_sans_kr"
                    android:textColor="@color/black"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_get_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_get_flag"
                android:textColor="@color/beige"
                android:fontFamily="@font/jua"
                android:textAlignment="center"
                android:textSize="18sp"
                android:paddingHorizontal="70dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/ic_ripple_solid_maroon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dropdown_country_container"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>